{
  "name": "edutrack-server",
  "version": "1.0.0",
  "description": "EduTrack LMS Backend API",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix"
  },
  "keywords": [
    "api",
    "rest",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "EduTrack Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.4.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^6.10.0",
    "express-mongo-sanitize": "^2.2.0",
    "cookie-parser": "^1.4.6",
    "multer": "^1.4.5-lts.1",
    "aws-sdk": "^2.1450.0",
    "socket.io": "^4.7.2",
    "redis": "^4.6.8",
    "ioredis": "^5.3.2",
    "@socket.io/redis-adapter": "^8.2.1",
    "nodemailer": "^6.9.4",
    "bull": "^4.11.3",
    "pdfkit": "^0.13.0",
    "sharp": "^0.32.5",
    "file-type": "^18.5.0",
    "winston": "^3.10.0",
    "compression": "^1.7.4",
    "hpp": "^0.2.3",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "cross-env": "^7.0.3",
    "@babel/preset-env": "^7.22.15",
    "mongodb-memory-server": "^8.15.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "transform": {}
  }
}
